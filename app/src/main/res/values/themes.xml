<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WizSmith" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/wizsmith_primary</item>
        <item name="colorPrimaryDark">@color/wizsmith_primary_dark</item>
        <item name="colorAccent">@color/wizsmith_accent</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="android:statusBarColor">@color/wizsmith_primary</item>
        <item name="android:navigationBarColor">@color/md_theme_light_background</item>
    </style>

    <style name="Theme.WizSmith.Splash" parent="Theme.WizSmith">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="WizSmithButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="backgroundTint">@color/wizsmith_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="WizSmithCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="WizSmithTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/wizsmith_primary</item>
    </style>
</resources>
