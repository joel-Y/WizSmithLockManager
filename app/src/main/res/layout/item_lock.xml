<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/WizSmithCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivLockStatus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_lock"
            android:contentDescription="Lock status"
            app:tint="@color/wizsmith_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLockName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Living Room Lock"
            android:textSize="18sp"
            android:textColor="@color/gray_900"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/ivLockStatus"
            app:layout_constraintStart_toEndOf="@id/ivLockStatus"
            app:layout_constraintEnd_toStartOf="@id/tvBattery" />

        <TextView
            android:id="@+id/tvLockStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locked"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvLockName"
            app:layout_constraintStart_toEndOf="@id/ivLockStatus" />

        <TextView
            android:id="@+id/tvBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textSize="14sp"
            android:textColor="@color/success"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLockMac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AA:BB:CC:DD:EE:FF"
            android:textSize="12sp"
            android:textColor="@color/gray_500"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivLockStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnQuickAction" />

        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Updated 5 mins ago"
            android:textSize="12sp"
            android:textColor="@color/gray_500"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvLockMac"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuickAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.TextButton"
            app:layout_constraintTop_toBottomOf="@id/tvBattery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>